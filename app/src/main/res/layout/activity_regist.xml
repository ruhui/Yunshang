<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackcolor">

    <com.shidai.yunshang.view.widget.NavBarBack_
        android:id="@+id/mNavbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary">

    </com.shidai.yunshang.view.widget.NavBarBack_>

    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/colorPrimary"
            android:id="@+id/relativeLayout2">
            
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/txtRegist"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/white"
            android:layout_marginTop="15dp">
            
            <RelativeLayout
                android:id="@+id/relaPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                
                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="手机号"
                    android:textColorHint="#A1A6BB"
                    android:paddingLeft="5dp"
                    />
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackcolor"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaCode"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relaPhone">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/editText"
                    android:layout_toEndOf="@+id/editText" />

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="验证码"
                    android:textColorHint="#A1A6BB"
                    android:paddingLeft="5dp"
                    android:id="@+id/editText" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackcolor"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relaPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relaCode">

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="密码"
                    android:textColorHint="#A1A6BB"
                    android:paddingLeft="5dp"
                    android:inputType="textPassword"
                    />
                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackcolor"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relaRePassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relaPassword"
                >

                <EditText
                    android:id="@+id/edtRePassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="确认密码"
                    android:textColorHint="#A1A6BB"
                    android:paddingLeft="5dp"
                    android:inputType="textPassword"
                    />
                <View
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackcolor"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaYaoqing"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/relaRePassword">

                <EditText
                    android:id="@+id/edtRecommender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="邀请人"
                    android:textColorHint="#A1A6BB"
                    android:paddingLeft="5dp"
                    />
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/windowbackcolor"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgSelect"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/dl_jzmm"
                android:scaleType="center"
                android:layout_below="@+id/relaYaoqing"
                android:layout_alignLeft="@+id/relaYaoqing"
                android:layout_alignStart="@+id/relaYaoqing" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户注册协议"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/relaYaoqing"
                android:layout_toRightOf="@+id/imgSelect"
                android:layout_toEndOf="@+id/imgSelect"
                android:layout_alignBottom="@+id/imgSelect" />

            <Button
                android:id="@+id/button2"
                android:layout_width="186dp"
                android:layout_height="40dp"
                android:text="免费注册"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_blue_radio"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtRegist"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:textSize="18sp"
            android:text="登录"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </TextView>



    </RelativeLayout>
</LinearLayout>