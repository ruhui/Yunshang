<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowbackcolor">

    <com.shidai.yunshang.view.widget.NavBarBack_
        android:id="@+id/mNavbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary">

    </com.shidai.yunshang.view.widget.NavBarBack_>

    <com.shidai.yunshang.view.widget.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/colorPrimary"
                >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                </android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mRecycleView"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:id="@+id/relativeLayout8">

                        <TextView
                            android:id="@+id/textView43"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E9EBF3"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="24sp"
                            android:textColor="#A1A6BB"
                            android:background="@null"
                            android:id="@+id/editText2"
                            android:gravity="center|left"
                            android:hint="请输入结算金额"
                            android:textColorHint="#A1A6BB"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:inputType="numberDecimal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="全部"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/textView44"
                            />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFA1A6BB"
                        android:textSize="12sp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/relativeLayout8"
                        android:layout_alignLeft="@+id/relativeLayout8"
                        android:layout_alignStart="@+id/relativeLayout8"
                        android:layout_alignRight="@+id/relativeLayout8"
                        android:layout_alignEnd="@+id/relativeLayout8"
                        android:id="@+id/textView48" />


                    <Button
                        android:id="@+id/button2"
                        android:layout_width="186dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_blue_radio"
                        android:text="提现"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_below="@+id/textView48"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp" />

                    <TextView
                        android:id="@+id/txtRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="温馨提醒：\nT+0到账时间\n工作日（周一到周六）8点到15点 申请 当天2分钟内到帐。15点到0点 申请 次日10点前到帐0点到8点 申请 次日10点前到帐；
\n\n
T+1到账时间\n工作日（周一到周六）8点到15点 申请 当天2分钟内到帐。15点到0点 申请 次日10点前到帐0点到8点 申请 次日10点前到帐。\n"
                        android:textColor="#FFA1A6BB"
                        android:textSize="10sp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/button2"
                        android:layout_alignRight="@+id/textView48"
                        android:layout_alignEnd="@+id/textView48"
                        android:layout_alignLeft="@+id/textView48"
                        android:layout_alignStart="@+id/textView48" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </com.shidai.yunshang.view.widget.MyScrollview>

</LinearLayout>