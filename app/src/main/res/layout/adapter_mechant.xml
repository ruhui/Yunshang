<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/dj_yh"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView22" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text=""
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="35dp"
            android:layout_alignTop="@+id/imageView22"
            android:layout_toLeftOf="@+id/imageView23"
            android:layout_toRightOf="@+id/imageView22"
            android:layout_toEndOf="@+id/imageView22"
            android:layout_above="@+id/txtGxmoney" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/in"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView23" />

        <TextView
            android:id="@+id/txtGxmoney"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:text="分润贡献：¥0.00"
            android:textColor="#FF000000"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/size_15"
            android:layout_alignBaseline="@+id/textView64"
            android:layout_alignBottom="@+id/textView64"
            android:layout_toLeftOf="@+id/textView64"
            android:layout_alignLeft="@+id/txtName"
            android:layout_alignStart="@+id/txtName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/imageView22"
            android:layout_alignRight="@+id/imageView23"
            android:layout_alignEnd="@+id/imageView23"
            android:id="@+id/textView64" />
    </RelativeLayout>

</LinearLayout>